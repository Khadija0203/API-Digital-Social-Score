{
  "title": "Performance & Model Health",
  "tags": ["mlops", "performance", "latency"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "10s",
  "uid": "performance-mlops",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Latence Inference ML (P50/P95/P99)",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(ml_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "P50",
          "refId": "A",
          "datasource": {"uid": "PBFA97CFB590B2093"}
        },
        {
          "expr": "histogram_quantile(0.95, rate(ml_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "P95",
          "refId": "B",
          "datasource": {"uid": "PBFA97CFB590B2093"}
        },
        {
          "expr": "histogram_quantile(0.99, rate(ml_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "P99",
          "refId": "C",
          "datasource": {"uid": "PBFA97CFB590B2093"}
        }
      ],
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "mean", "max"]}
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "custom": {"lineWidth": 2, "fillOpacity": 15, "showPoints": "never"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 0.2, "color": "red"}
            ]
          }
        }
      }
    },
